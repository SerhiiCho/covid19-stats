{
    "compilerOptions": {
        "target": "ES2018",
        "module": "es2022",
        "moduleResolution": "Node",
        "lib": ["es2021", "dom", "WebWorker"],
        "sourceMap": true,
        "removeComments": true,
        "noEmitOnError": true,
        "strict": true,
        "noImplicitAny": false,
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true
    }
}